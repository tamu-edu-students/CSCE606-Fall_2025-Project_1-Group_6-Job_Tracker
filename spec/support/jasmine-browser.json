{
  "srcDir": "app/javascript",
  "specDir": "spec/javascripts",
  "srcFiles": [
    "**/*.js",
    "!application.js",              
    "!controllers/**/*.js"  
  ],
  "specFiles": [
    "**/*[sS]pec.js"
  ],
  "helpers": [
    "helpers/**/*.js"
  ],
  "useImport": true,
  "capabilities": {
    "browserName": "chrome",
    "goog:chromeOptions": {
      "binary": "/usr/bin/chromium-browser",
      "args": [
        "--headless=new",
        "--no-sandbox",
        "--disable-dev-shm-usage",
        "--disable-gpu"
      ]
    }
  }
}
