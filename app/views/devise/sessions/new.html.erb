<div class="signup-container">
  <h2 class="signup-title">Log in</h2>

  <!-- Display Devise error messages -->
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "signup-form" }) do |f| %>

    <!-- Email -->
    <div class="signup-field field">
      <%= f.label :email, class: "signup-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "signup-input", required: true %>
      <small class="hint">Enter your registered email</small>
    </div>

    <!-- Password -->
    <div class="signup-field field">
      <%= f.label :password, class: "signup-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "signup-input", required: true %>
      <small class="hint">Enter your account password</small>
    </div>

    <!-- Remember Me -->
    <% if devise_mapping.rememberable? %>
      <div class="signup-field field remember-me">
        <%= f.check_box :remember_me, class: "remember-checkbox" %>
        <%= f.label :remember_me, class: "remember-label" %>
      </div>
    <% end %>

    <!-- Submit -->
    <div class="signup-actions">
      <%= f.submit "Log in", class: "signup-submit" %>
    </div>
  <% end %>

  <!-- Optional: Add links -->
  <div class="signup-footer">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-link" %><br />
    <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "signup-link" %>
  </div>
</div>