
<h1>My Job Applications</h1>

<%= link_to 'New Job Application', new_job_path, class: 'btn btn-primary' %>

<div class="mb-3" data-controller="job-search">
  <input type="text" data-job-search-target="input" class="form-control" placeholder="Search jobs by title or company...">
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: 'jobs/rows', locals: { jobs: @jobs } %>
  </tbody>
</table>
