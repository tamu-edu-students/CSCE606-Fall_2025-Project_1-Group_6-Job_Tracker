<div class="info-container text-center">
  <h2 class="page-title">Personal Information</h2>

  <ul class="list-group my-4">
    <li class="list-group-item"><strong>Full Name:</strong> <%= @user.full_name %></li>
    <li class="list-group-item"><strong>Email:</strong> <%= @user.email %></li>
    <li class="list-group-item"><strong>Phone:</strong> <%= @user.phone %></li>
  </ul>

  <div class="info-buttons">
    <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary w-100" %>
    <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-secondary w-100" %>
  </div>
</div>