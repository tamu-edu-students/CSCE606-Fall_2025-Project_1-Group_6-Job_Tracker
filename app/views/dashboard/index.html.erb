<div class="container d-flex justify-content-between align-items-center mt-4">
  <h1 class="page-title mb-0">Dashboard</h1>
  <%= link_to "My Jobs List", my_jobs_path, class: "btn btn-outline-primary" %>
</div>

<div class="container my-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="row text-center fw-semibold">
        <div class="col-md-3">
          <h4>üì© Applied</h4>
          <% current_user.jobs.with_status("applied").each do |job| %>
            <div class="card mb-3 job-card applied">
              <div class="card-body">
                <h5><%= job.title %></h5>
                <p><strong>Company:</strong> <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %></p>
              </div>
            </div>
          <% end %>
          <%= link_to "‚ûï Add Job", new_job_path, class: "btn-primary w-100 mt-2" %>
        </div>
        <div class="col-md-3">
          <h4>üìû Interview</h4>
          <% current_user.jobs.with_status("interview").each do |job| %>
            <div class="card mb-3 job-card interview">
              <div class="card-body">
                <h5><%= job.title %></h5>
                <p><strong>Company:</strong> <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %></p>
              </div>
            </div>
          <% end %>
          <%= link_to "‚ûï Add Job", new_job_path, class: "btn-primary w-100 mt-2" %>
        </div>
        <div class="col-md-3">
          <h4>‚úÖ Offer</h4>
          <% current_user.jobs.with_status("offer").each do |job| %>
            <div class="card mb-3 job-card offer">
              <div class="card-body">
                <h5><%= job.title %></h5>
                <p><strong>Company:</strong> <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %></p>
              </div>
            </div>
          <% end %>
          <%= link_to "‚ûï Add Job", new_job_path, class: "btn-primary w-100 mt-2" %>
        </div>
        <div class="col-md-3">
          <h4>‚ùå Rejected</h4>
          <% current_user.jobs.with_status("rejected").each do |job| %>
            <div class="card mb-3 job-card rejected">
              <div class="card-body">
                <h5><%= job.title %></h5>
                <p><strong>Company:</strong> <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %></p>
              </div>
            </div>
          <% end %>
          <%= link_to "‚ûï Add Job", new_job_path, class: "btn-primary w-100 mt-2" %>
        </div>
      </div>
    </div>
  </div>
</div>


<h2>My Job Applications</h2>
<%= link_to 'New Job Application', new_job_path, class: 'btn btn-primary' %>

<div class="mb-3" data-controller="job-search">
  <div class="input-group">
    <input type="text" data-job-search-target="input" class="form-control" placeholder="Search jobs by title or company...">
    <button type="button" data-action="click->job-search#search" class="btn btn-primary">Search</button>
  </div>
</div>

<% if @jobs.empty? %>
  <p class="text-center">You have no job applications yet. Click the button above to add one!</p>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped" id="dashboard-jobs-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Company</th>
          <th>Status</th>
          <th>Deadline</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'jobs/rows', locals: { jobs: @jobs } %>
      </tbody>
    </table>
  </div>
<% end %>

