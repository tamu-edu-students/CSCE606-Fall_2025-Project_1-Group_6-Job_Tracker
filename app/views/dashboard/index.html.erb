<div class="container d-flex justify-content-between align-items-center mt-4">
  <h1 class="page-title mb-0">Dashboard</h1>
  <div class="d-flex justify-content-between align-items-center mt-4">
    <%= link_to "➕ Add Job", new_job_path, class: "btn btn-outline-primary me-2" %>
    <%= link_to "My Jobs List", my_jobs_path, class: "btn btn-outline-primary me-2" %>
  </div>
</div>

<div class="container my-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <!-- 👇 5 equal-width columns -->
      <div class="row row-cols-1 row-cols-md-5 text-center fw-semibold g-3">

        <!-- 📝 To Apply -->
        <div class="col">
          <h4>📝 To Apply</h4>
          <% current_user.jobs.with_status("to_apply").each do |job| %>
            <div class="card mb-3 job-card to-apply">
              <div class="card-body">
                <h5><%= link_to job.title, job_path(job), class: "text-decoration-none" %></h5>
                <p><strong>Company:</strong>
                  <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 📩 Applied -->
        <div class="col">
          <h4>📩 Applied</h4>
          <% current_user.jobs.with_status("applied").each do |job| %>
            <div class="card mb-3 job-card applied">
              <div class="card-body">
                <h5><%= link_to job.title, job_path(job), class: "text-decoration-none" %></h5>
                <p><strong>Company:</strong>
                  <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 📞 Interview -->
        <div class="col">
          <h4>📞 Interview</h4>
          <% current_user.jobs.with_status("interview").each do |job| %>
            <div class="card mb-3 job-card interview">
              <div class="card-body">
                <h5><%= link_to job.title, job_path(job), class: "text-decoration-none" %></h5>
                <p><strong>Company:</strong>
                  <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- ✅ Offer -->
        <div class="col">
          <h4>✅ Offer</h4>
          <% current_user.jobs.with_status("offer").each do |job| %>
            <div class="card mb-3 job-card offer">
              <div class="card-body">
                <h5><%= link_to job.title, job_path(job), class: "text-decoration-none" %></h5>
                <p><strong>Company:</strong>
                  <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- ❌ Rejected -->
        <div class="col">
          <h4>❌ Rejected</h4>
          <% current_user.jobs.with_status("rejected").each do |job| %>
            <div class="card mb-3 job-card rejected">
              <div class="card-body">
                <h5><%= link_to job.title, job_path(job), class: "text-decoration-none" %></h5>
                <p><strong>Company:</strong>
                  <%= job.company ? link_to(job.company.name, company_path(job.company)) : '' %>
                </p>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
